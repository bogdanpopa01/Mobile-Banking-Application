<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">


    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:text="@string/tvAppName"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFiller1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="15dp"
        android:text="@string/tvFiller1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppName" />

    <TextView
        android:id="@+id/tvFiller2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/tvfiller2"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tvFiller1"
        app:layout_constraintTop_toBottomOf="@+id/tvAppName" />

    <View
        android:id="@+id/viewCardHomeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/card_background"
        app:layout_constraintDimensionRatio="4:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppName" />

    <ImageView
        android:id="@+id/imageViewMastercardHomeFragment"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/ic_mastercard_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFiller2" />

    <TextView
        android:id="@+id/tvCardNumberHomeFragment"
        android:layout_width="247dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/tvCardNumber"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCardHomeFragment" />

    <TextView
        android:id="@+id/tvUserNameHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/tvUserNameHomeFragment"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameHomeFragment" />

    <TextView
        android:id="@+id/tvCardHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/tvCardHomeFragment"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFiller1" />

    <TextView
        android:id="@+id/tvNameHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/tvNameHomeFragment"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCardNumberHomeFragment" />

    <TextView
        android:id="@+id/tvValidThruHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:text="@string/tvValidThruHomeFragment"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/tvNameHomeFragment"
        app:layout_constraintTop_toBottomOf="@+id/tvCardNumberHomeFragment" />

    <TextView
        android:id="@+id/tvValidThruDateHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="32dp"
        android:text="@string/tvValidThruDateHomeFragment"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imageViewMastercardHomeFragment"
        app:layout_constraintTop_toBottomOf="@+id/tvValidThruHomeFragment" />

    <ImageView
        android:id="@+id/imageViewSeePinHomeFragment"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_fiber_pin_24"
        app:layout_constraintStart_toEndOf="@+id/tvCardNumberHomeFragment"
        app:layout_constraintTop_toBottomOf="@+id/tvFiller2" />

    <TextView
        android:id="@+id/tvBalanceHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:text="@string/tvBalanceHomeFragment"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCardHomeFragment" />

    <TextView
        android:id="@+id/tvBalanceValueHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:text="@string/tvBalanceValueHomeFragment"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvBalanceHomeFragment"
        app:layout_constraintTop_toBottomOf="@+id/viewCardHomeFragment" />

    <TextView
        android:id="@+id/tvDepositsHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="@string/tvDepositsHomeFragment"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBalanceHomeFragment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/android:transparent"
        android:clickable="true"
        android:src="@drawable/baseline_add_24"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintStart_toEndOf="@+id/tvDepositsHomeFragment"
        app:layout_constraintTop_toBottomOf="@+id/tvBalanceHomeFragment"
        app:strokeColor="@android:color/transparent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSeeDeposits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/android:transparent"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_down_24"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintStart_toEndOf="@+id/fabAddDeposit"
        app:layout_constraintTop_toBottomOf="@+id/tvBalanceValueHomeFragment"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp" />

    <FrameLayout
        android:id="@+id/depositsFragment"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fabSeeDeposits">

    </FrameLayout>

    <TextView
        android:id="@+id/tvRON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="45dp"
        android:text="@string/tvRON"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvBalanceValueHomeFragment"
        app:layout_constraintTop_toBottomOf="@+id/viewCardHomeFragment" />

    <ImageView
        android:id="@+id/imageViewCopyHomeFragment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/baseline_copy_24"
        app:layout_constraintEnd_toEndOf="@+id/viewCardHomeFragment"
        app:layout_constraintTop_toTopOf="@+id/viewCardHomeFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>